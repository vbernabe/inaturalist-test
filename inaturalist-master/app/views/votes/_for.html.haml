.votes_for
  %ul.plain
    - @users.each do |user|
      %li.fadednowrap
        = link_to user_image(user, size: :thumb), faves_by_login_path(user.login)
        = link_to_user user, url: faves_by_login_path(user.login)
  - if @users.total_entries > @users.size
    .stacked.upstacked.meta=t :and_x_more_people!, count: @users.total_entries - @users.size
